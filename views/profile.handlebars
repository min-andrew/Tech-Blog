<div class="profile">
    <div class="col-auto">
        <h2>Your Dashboard</h2>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6 makepostcard">
        <form class="form makepost-form">
            <div class="post-head">
                <h2>Create New Post</h2>
            </div>
            <div class="form-group post-title">
                <label for="blog-name">Post Title</label>
                <input class="form-input" type="text" id="blog-name" name="blog-name" />
            </div>
            <div class="form-group post-body">
                <label for="blog-desc">Content</label>
                <textarea class="form-input" id="blog-desc" name="blog-desc"></textarea>
            </div>
            <div class="form-group submitbtn">
                <button class="btn btn-primary" type="submit">Create</button>
            </div>
            <div class="form-group cancelbtn">
                <button class="btn btn-primary" type="submit">Cancel</button>
            </div>
        </form>
    </div>

    {{#if blogs.length}}
    <div class="col-md-6 blog-list">

        {{#each blogs as |blog|}}
        <div class="row mb-2 myblogpost">
            <div class="col-md-8 myblogcontainer">
                <div class="myblogcontainer2">
                    <a href="/blog/{{blog.id}}">{{blog.name}}</a>
                    <a id="editbtn" href="/blog/{{blog.id}}/edit">(Edit)</a>
                </div>
                {{!-- <div class="col-md-4">
                    <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE</button>
                </div> --}}

                <p>{{format_date date_created}}</p>


            </div>
            {{/each}}
        </div>
        {{/if}}

        <div class=" form-group newpostbtn">
            <button class="btn btn-primary">+ New Post</button>
        </div>

    </div>

    <script src="./js/profile.js"></script>